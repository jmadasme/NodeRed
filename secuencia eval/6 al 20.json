// **Flujo 9: Temporizador con Display**
[
    {
        "id": "inject9",
        "type": "inject",
        "z": "flow9",
        "name": "Iniciar Timer",
        "props": [
            {
                "p": "payload"
            },
            {
                "p": "count",
                "v": "60",
                "vt": "num"
            }
        ],
        "repeat": "",
        "crontab": "",
        "once": false,
        "onceDelay": 0.1,
        "topic": "",
        "payload": "start",
        "payloadType": "str",
        "x": 140,
        "y": 80,
        "wires": [
            [
                "function9"
            ]
        ]
    },
    {
        "id": "function9",
        "type": "function",
        "z": "flow9",
        "name": "Countdown Timer",
        "func": "var count = context.get('count') || 60;\n\nif (msg.payload === 'start') {\n    context.set('count', 60);\n    count = 60;\n}\n\nif (count > 0) {\n    count--;\n    context.set('count', count);\n    setTimeout(() => {\n        node.send({payload: 'tick'});\n    }, 1000);\n}\n\nmsg.payload = count;\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "x": 320,
        "y": 80,
        "wires": [
            [
                "gauge9",
                "function9"
            ]
        ]
    },
    {
        "id": "gauge9",
        "type": "ui_gauge",
        "z": "flow9",
        "name": "Temporizador",
        "group": "group9",
        "order": 2,
        "width": 0,
        "height": 0,
        "gtype": "gage",
        "title": "Tiempo Restante",
        "label": "segundos",
        "format": "{{value}}",
        "min": 0,
        "max": 60,
        "colors": [
            "#ca3838",
            "#e6e600",
            "#00b500"
        ],
        "seg1": "20",
        "seg2": "40",
        "x": 510,
        "y": 80,
        "wires": []
    },
    {
        "id": "group9",
        "type": "ui_group",
        "name": "Temporizador",
        "tab": "tab9",
        "order": 1,
        "disp": true,
        "width": "6",
        "collapse": false
    },
    {
        "id": "tab9",
        "type": "ui_tab",
        "name": "Tiempo",
        "icon": "timer",
        "order": 9,
        "disabled": false,
        "hidden": false
    }
]

