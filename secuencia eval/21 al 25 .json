        "id": "button21",
        "type": "ui_button",
        "z": "flow21",
        "name": "Calibrar",
        "group": "group21",
        "order": 3,
        "width": 0,
        "height": 0,
        "passthru": false,
        "label": "Calibrar Motor",
        "tooltip": "",
