        "name": "Humedad",
        "group": "group22",
        "order": 2,
        "width": "3",
        "height": "3",
        "gtype": "gage",
        "title": "Humedad",
        "label": "%",
        "format": "{{msg.payload.value}}",
        "min": "0",
        "max": "100",
        "colors": [
            "#ca3838",
            "#00b500",
            "#ca3838"
        ],
        "seg1": "30",
        "seg2": "70",
        "x": 760,
        "y": 80,
        "wires": []
    },
    {
        "id": "gauge22c",
        "type": "ui_gauge",
        "z": "flow22",
        "name": "Luminosidad",
        "group": "group22",
        "order": 3,
        "width": "3",
        "height": "3",
        "gtype": "gage",
        "title": "Luz",
        "label": "lux",
